<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="weeklyreport" translate="label" sortOrder="10">
            <label>Report Users</label>
        </tab>
        <section id="weeklyreport" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Configuration</label>
            <tab>weeklyreport</tab>
            <resource>Nalli_Weeklyreport::weeklyreport_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field id="allowed_users" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Weekly Report - Allowed Users</label>
                    <comment>enter email ids seperated by comma.</comment>
                </field>
                <field id="officscreen_allowed_users" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Office Screen - Allowed Users</label>
                    <comment>enter email ids seperated by comma.</comment>
                </field>
                <field id="salesdashboard_allowed_users" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Sales Dashboard - Allowed Users</label>
                    <comment>enter email ids seperated by comma.</comment>
                </field>
                <field id="instock_allowed_users" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Instock Advanced - Allowed Users</label>
                    <comment>enter email ids seperated by comma.</comment>
                </field>
                <field id="sold_allowed_users" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Sold Products - Allowed Users</label>
                    <comment>enter email ids seperated by comma.</comment>
                </field>
                <field id="monthlytarget" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Monthly Target</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                    <comment>Monthly Target for office screen.</comment>
                </field>
                <field id="instock_report_allowed_users" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Instock Cron Report - Allowed Users</label>
                    <comment>enter email ids seperated by comma.</comment>
                </field>
                <field id="international_report_allowed_user" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Current Instock Data International Products</label>
                    <comment>enter email id here.</comment>
                </field>
            </group>
        </section>
    </system>
</config>